logging {
  level  = "info"
  format = "logfmt"
}

loki.write "local" {
    endpoint {
        url = "http://loki:3100/api/v1/push"
    }
}

loki.source.api "loki_push_api" {
    http {
        listen_address = "0.0.0.0"
        listen_port = 9999
    }
    forward_to = [
        loki.write.local.receiver,
    ]
    labels = {
        forwarded = "true",
    }
}
